{
  "manifest_version": 2,
  "name": "SwapUnits Converter",
  "version": "1.0.0",
  "description": "Convert units instantly by selecting text on any webpage",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "https://api.exchangerate-api.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "swapunits@swapunits.com",
      "strict_min_version": "109.0"
    }
  }
}
